doctype html
html(lang="sv")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        title Supertipset
        style.
            *, *:before, *:after {
                -moz-box-sizing: border-box;
                -webkit-box-sizing: border-box; 
                box-sizing: border-box;
            }

            body, html {
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 16px;
                line-height: 130%;
            }
            .wrapper {
                max-width: 400px;
                margin: 5% auto 0 auto;
                text-align: center;
            }

            h1 {
                text-align: center;
                font-weight: bold;
                letter-spacing: 2px;
                margin-bottom: 80px;
                padding-top: 20px;
                line-height: 130%;
                font-size: 56px;
                color: #1ABC9C;
                text-shadow: 0px 1px 2px rgba(0,0,0,0.6);
            }

            .register {
                text-decoration: none;
                border: 0;
                border-radius: 4px;
                padding: 15px;
                background: #1ABC9C;
                outline: none;
                font-weight: 100;
                font-size: 18px;
                color: white;
                letter-spacing: 2px;
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                cursor: pointer;
            }

            .register:hover {
                background: #7BC3B5;
            }

            .login {
                font-size: 18px;
                font-weight: 200;
                letter-spacing: 1px;
                color: #3498DB;
                text-decoration: none;
            }

            .login:hover {
                text-decoration: underline;
            }

            p {
                font-weight: 200;
                letter-spacing: 1px;
                margin: 45px 0 25px 0;
            }

            .footer {
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                text-align: center;
                font-size: 14px;
                color: #222;
                font-weight: 200;
                letter-spacing: 1px;
            }

    body
        div.wrapper
            h1 Supertipset

            a.register(href="/register") Registrera dig
            p eller
            a.login(href="/login") Logga in

        footer.footer
            p &copy; Supertipset 2014


